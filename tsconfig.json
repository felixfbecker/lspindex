{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "types/"],
    "target": "es2018",
    "lib": ["es2018", "dom.iterable"],
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true
  }
}
